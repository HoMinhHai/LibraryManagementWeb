    <style>
        body {
            font-family: nunito-sans, sans-serif, Helvetica, Arial;
            font-size: 15px;
        }

        .header-account {
            position: relative;
        }

        .drop-account {
            width: 130px;
            position: absolute;
            top: 90%;
            display: block;
            right: 0;
            background: #fff;
            text-align: center;
            z-index: 999;
            -webkit-box-shadow: 0px 2px 6px 0px rgba(50, 50, 50, 0.33);
            -moz-box-shadow: 0px 2px 6px 0px rgba(50, 50, 50, 0.33);
            box-shadow: 0px 2px 6px 0px rgba(50, 50, 50, 0.33);
            transition-duration: 0s;
            transition-delay: 0.1s;
            opacity: 0;
        }

        .header-account:hover .drop-account,
        .header-account:focus-within .drop-account {
            display: block;
            opacity: 1;
        }

        .drop-account ul {
            list-style-type: none;
            padding: 0;
            text-align: left;
        }

            .drop-account ul li {
                margin-left: 15px;
                border-top: 1px solid #f2f4f5;
            }

        .navbar {
            background-color: #222;
            margin-bottom: 10px;
            margin-top: 10px;
            position: relative;
            border: 1px solid grey;
            box-shadow: 1px 1px 5px rgba(0,0,0,.5);
        }

        .navbar-default .navbar-nav > li > a {
            color: #fff;
            padding: 15px 15px;
            outline: none;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .navbar-nav > li > .dropdown-menu {
            border-radius: 6px;
            position: absolute;
            display: none;
            left: 13px;
            top: 30px;
        }

        .navbar-default .navbar-nav > li > a:hover {
            color: #121212;
            background-color: #fff;
        }

        .navbar-default .navbar-nav > .open > a, .navbar-default .navbar-nav > .open > a:focus, .navbar-default .navbar-nav > .open > a:hover {
            color: #fff;
            background-color: #000;
        }

        .dropdown-menu > li > a:hover {
            color: #c9c3c3;
            text-decoration: none;
            background-color: #121212;
        }

        .navbar-default .navbar-nav > .active > a, .navbar-default .navbar-nav > .active > a:focus, .navbar-default .navbar-nav > .active > a:hover {
            color: #fff;
            background-color: #d71919;
        }

        .dropdown-menu > li > a {
            color: #000;
        }


        .navbar-default .navbar-nav > li > a {
            color: #fff;
            outline: none;
            overflow: hidden;
        }

        .navbar ul li {
            position: relative;
        }

            .navbar ul li a {
                margin-left: 15px;
            }

        .navbar-nav .open .dropdown-menu {
            position: absolute;
            width: auto;
            margin-top: 0;
            background-color: transparent;
            border: 0;
            -webkit-box-shadow: none;
            box-shadow: none;
        }

        .dropdown-menu ul {
            list-style-type: none;
            padding-top: 0;
            padding-bottom: 0;
            padding-left: 0px;
            height: 100%;
        }

            .dropdown-menu ul li {
                border-bottom: 0.4px solid gray;
            }

                .dropdown-menu ul li:hover {
                    background-color: #3b71ca;
                    color: white;
                    cursor: pointer;
                }

        .navbar-nav .open .dropdown-menu > li:hover a {
            background-color: transparent;
            margin-left: 18px;
            color: #fff !important;
        }

        .navbar-nav .open .dropdown-menu > li:hover:before {
            font: normal normal normal 14px/1 FontAwesome;
            content: '\f054';
            width: 10px;
            height: 10px;
            transform: translate(-50%,-50%);
            color: #e14444;
        }


        .navbar-default .navbar-nav .open .dropdown-menu > li > a {
            color: #e14444;
        }

        .search-bar {
            margin-bottom: 10px;
        }

        .section-header .header-main .drop-account ul {
            padding-left: 0;
            padding-right: 0;
        }

            .section-header .header-main .drop-account ul li {
                margin-left: 10px;
            }

                .section-header .header-main .drop-account ul li :hover {
                    background-color: #3b71ca;
                    color: white;
                    cursor: pointer;
                }

        .drop-account ul li a {
            display: block;
            width: 100%;
        }

        footer {
            margin-top: 50px;
        }

        .info_book {
            width: 500px;
        }

        .container .info_book .title {
            font-size: 20px;
        }

        .detail {
            background-color: white;
            margin-top: 20px;
        }

        .container .text-blue {
            color: #1091d3
        }
    </style>
</head>
@{ 
    Layout = null;
}
<body>
