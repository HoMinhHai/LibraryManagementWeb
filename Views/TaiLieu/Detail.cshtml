    @model DoAnKiSu_ThuVien.Models.ThongTinTaiLieuTimKiem

    <div class="container detail">
        <div class="d-flex justify-content-lg-start">
            <img style="width: 164px; height: 235px; border: 1px solid #fff; margin-right: 200px" src="@(Url.Content("~/Content/images/books/") + Model.anhBia)" alt="Ảnh bìa" />
            <div class="info_book">
                <p class="text-blue title">@Model.tenTL</p>
                <p>@Model.loaiTL</p>
                <div class="d-flex justify-content-between">
                    <p>Tác giả: </p>
                    <div>
                        @foreach (String tg in Model.dsTacGia)
                        {
                            <span class="text-blue">@tg</span>
                        }
                    </div>


                </div>
                <div class="d-flex justify-content-between">
                    <p>Xuất bản: </p>
                    <div class="d-flex text-blue">
                        <span>@(Model.tenNXB + " , " )</span>
                        <span>@Model.namXuatBan</span>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <p>Mô tả vât lý:</p>
                    <div class="d-flex text-blue">
                        <span>@(Model.soTrang + " tr, ")</span>
                        <span>@(Model.chieuCao + " cm")</span>
                    </div>

                </div>
                <div class="d-flex justify-content-between">
                    <p>Chủ đề:</p>
                    <p class="text-blue">@Model.chuDe</p>
                </div>
                <div class="d-flex justify-content-between">
                    <p>Ký hiệu phân loại:</p>
                    <p class="text-blue">@Model.kyHieuPhanLoai</p>
                </div>

            </div>
        </div>
        <div>
            <h5> Thông tin lưu thông</h5>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Mã ĐKCB</th>
                        <th scope="col">Tình trạng</th>
                        <th scope="col">Tầng</th>
                        <th scope="col">Số kệ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.dsBanSao)
                    {
                        <tr>

                            <td>@item.MaDangKyCaBiet</td>
                            <td>@item.TinhTrang</td>
                            <td>@("Tầng " + item.KeSach.Tang)</td>
                            <td>@("Kệ sách " + item.KeSach.MaKe)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <footer style="height: 300px; margin-top: 20px; padding: 35px 30px 35px 30px; background-color: #00853c;">
        <div class="d-flex align-items-center justify-content-around" style="width: 100%; height: 100%; color: #fff; font-size: 20px">
